using UnityEngine;

public class UltimateBananaAim : MonoBehaviour
{
    [Header("Aim Config")]
    public string targetTag = "Enemy";
    public float aimRange = 100f;
    public float aimSpeed = 50f; // TÄƒng lÃªn Ä‘á»ƒ aim cá»±c nhanh
    private Transform currentTarget;

    [Header("UI Settings")]
    public bool isMenuOpen = true;
    public Rect windowRect = new Rect(100, 100, 250, 180); // Vá»‹ trÃ­ vÃ  kÃ­ch cá»¡ Tab
    public Texture2D bananaCatIcon; // KÃ©o áº£nh Chuá»‘i MÃ¨o vÃ o Ä‘Ã¢y

    private float fps;
    private GUIStyle headerStyle;
    private GUIStyle labelStyle;

    void Update()
    {
        // PhÃ­m táº¯t Ä‘á»ƒ Ä‘Ã³ng/má»Ÿ nhanh: Nháº¥n Insert hoáº·c Tab
        if (Input.GetKeyDown(KeyCode.Insert) || Input.GetKeyDown(KeyCode.Tab))
        {
            isMenuOpen = !isMenuOpen;
        }

        // FPS calculation
        fps = 1.0f / Time.deltaTime;

        // Auto Aim Logic (Fast)
        FindNearestTarget();
        if (currentTarget != null)
        {
            Vector3 dir = (currentTarget.position + new Vector3(0, 1.5f, 0)) - transform.position;
            Quaternion targetRot = Quaternion.LookRotation(dir);
            // Sá»­ dá»¥ng Lerp vá»›i tá»‘c Ä‘á»™ cao Ä‘á»ƒ aim dÃ­nh hÆ¡n
            transform.rotation = Quaternion.Lerp(transform.rotation, targetRot, aimSpeed * Time.deltaTime);
        }
    }

    void FindNearestTarget()
    {
        GameObject[] enemies = GameObject.FindGameObjectsWithTag(targetTag);
        float shortestDistance = Mathf.Infinity;
        GameObject nearestEnemy = null;

        foreach (GameObject enemy in enemies)
        {
            float distance = Vector3.Distance(transform.position, enemy.transform.position);
            if (distance < shortestDistance && distance <= aimRange)
            {
                shortestDistance = distance;
                nearestEnemy = enemy;
            }
        }
        currentTarget = nearestEnemy != null ? nearestEnemy.transform : null;
    }

    void OnGUI()
    {
        // Chá»‰ váº½ menu khi isMenuOpen = true
        if (isMenuOpen)
        {
            // GUI.Window cho phÃ©p kÃ©o di chuyá»ƒn (ID lÃ  0)
            windowRect = GUI.Window(0, windowRect, DrawBananaMenu, "");
        }
    }

    // Ná»™i dung bÃªn trong Tab
    void DrawBananaMenu(int windowID)
    {
        // Äá»‹nh dáº¡ng chá»¯
        headerStyle = new GUIStyle();
        headerStyle.normal.textColor = Color.yellow;
        headerStyle.fontStyle = FontStyle.Bold;
        headerStyle.alignment = TextAnchor.MiddleCenter;

        labelStyle = new GUIStyle();
        labelStyle.normal.textColor = Color.white;

        // 1. HÃ¬nh con mÃ¨o Banana (Náº¿u cÃ³ Texture)
        if (bananaCatIcon != null)
        {
            GUI.DrawTexture(new Rect(95, 5, 60, 60), bananaCatIcon);
        }
        else
        {
            GUILayout.Label("ðŸŒ CAT MENU ðŸŒ", headerStyle);
        }

        GUILayout.Space(50); // CÃ¡ch khoáº£ng Ä‘á»ƒ lá»™ hÃ¬nh con mÃ¨o

        // 2. ThÃ´ng tin FPS
        GUILayout.Label($"FPS: {fps:F0}", labelStyle);

        // 3. ThÃ´ng tin Aim
        string targetName = currentTarget != null ? currentTarget.name : "None";
        GUILayout.Label($"Target: {targetName}", labelStyle);
        
        GUILayout.Space(10);
        if (GUILayout.Button("Close Menu (Insert)"))
        {
            isMenuOpen = false;
        }

        // Cho phÃ©p kÃ©o tab báº±ng cÃ¡ch click vÃ o vÃ¹ng trá»‘ng trong Window
        GUI.DragWindow(new Rect(0, 0, 10000, 10000));
    }
}
